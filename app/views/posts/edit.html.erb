<div class="container-body">
  <div class="row">
    <h1>Edit your LFG post:</h1>
        <ul>
          <li>Fill out the necessary fields and find your group!</li>
        </ul>
      </div>
      <div class="col-md-8">
        <%= form_for @post do |f| %>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :name %>
          </div>
          <div class="form-group">
            <%= f.submit "Submit!", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
