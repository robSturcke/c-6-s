<div class="form-container">
  <div class="row">
      <h2>New LFG Post</h2>
      <%= form_for @post do |f| %>
        <br />
          <div class="col-md-6">
          <%= f.label :name, 'Gamertag' %><br />
          <%= f.text_field :name, autofocus: true, placeholder: "Your Gamertag" %>
          </div>

          <div class="col-md-6 col-marg-fix">
            <%= f.label :console, 'Select Console' %><br />
            <%= f.select :console, options_for_select([['Playstation 4', 'ps4'],
            ['Xbox One', 'xb1']]) %>
          </div>
        </div>

        <br />

        <div class="row">
          <div class="col-md-6">
            <%= f.label :activity, 'Select Activity' %><br />
            <%= f.select :activity, options_for_select([
            ['1v1 Private Crucible Match', 'pm1v1'],
            ['2v2 Private Crucible Match', 'pm2v2'],
            ['3v3 Private Crucible Match', 'pm3v3'],
            ['6v6 Private Crucible Match', 'pm6v6'],
            ['Rumble', 'rumble'],
            ['Doubles', '2v2play'],
            ['Skirmish | Elimination | Salvage', '3v3play'],
            ['Clash | Control | Rift', '6v6play'],
            ['Supremecy', 'supremecy'],
            ['Trials of Osiris: Flawless', 'tooflawless'],
            ['Trials of Osiris: Fun', 'toofun'],
            ['Trials of Osiris: Sherpa', 'toosherpa'],
            ['Iron Banner', 'ironbanner'],
            ['Strikes Playlist', 'strikesplay'],
            ['Patrol', 'patrol'],
            ['Quest', 'quest'],
            ['Nightfall', 'nightfall'],
            ['Vault of Glass Raid: Normal', 'vognorm'],
            ['Vault of Glass Raid: Hard', 'voghard'],
            ['Crota\'s End Raid: Normal', 'cenorm'],
            ['Crota\'s End Raid: Hard', 'cehard'],
            ['King\'s Fall Raid: Normal', 'kfnorm'],
            ['King\'s Fall Raid: Hard', 'kfhard'],
            ], { :class => 'opt-form-select' }) %>
          </div>

          <div class="col-md-6 col-marg-fix">
            <%= f.label :destiny_class, 'Class' %><br />
            <%= f.select :destiny_class, options_for_select([
              ['Hunter', 'hunter'],
              ['Warlock', 'warlock'],
              ['Titan', 'titan']]) %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6">
          <%= f.label :light_lvl, 'Your Light Level' %><br />
          <%= f.text_field :light_lvl, placeholder: "eg. 335" %>
          </div>

          <div class="col-md-6 col-marg-fix">
          <%= label_tag(:mic) %>
          <br />
          <%= check_box_tag(:mic, 'Mic?') %>
          </div>
        </div>

        <br />

        <div class="form-group">
          <%= f.label :notes %>
          <%= f.text_area :notes, rows: 4, class: 'form-control',
          placeholder: "Enter notes such as: Quest Name, Need Sherpa, Need 2 more people or any other Specific Criteria" %>
        </div>

        <div class="form-group">
          <%= f.submit "Post!", class: 'btn btn-success' %>
        </div>

      </div>
    <% end %>
  </div>
</div>
