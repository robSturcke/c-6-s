<div class=container-body>
  <div class="margin-wrapper">
  <table>
  <%= link_to '<i class="icon ion-ios-compose"></i> Post | Edit LFG'.html_safe, new_post_path, class: 'btn btn-success' %>
  </table>
    <h2>Filter your LFG search</h2>
  </div>
    <br />
      <div class="posts-wrap">
        <table id="postDatatable" class='table display responsive no-wrap' width="100%">
          <thead>
            <tr>
              <th>Console</th>
              <th>Gamertag</th>
              <th>Activity</th>
              <th>Class</th>
              <th>Light</th>
              <th>Notes</th>
            </tr>
          </thead>
          <tbody>
            <% @posts.each do |post| %>
              <tr>
                <td><%= post.console %></td>
                <td><%= post.name %></td>
                <td><%= post.activity %></td>
                <td><%= post.destiny_class %></td>
                <td><%= post.light_lvl %></td>
                <td><%= post.notes %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
</div>
<script>
$(document).ready(function() {
    $('#postDatatable').DataTable( {
      "bLengthChange": false,
        initComplete: function () {
            this.api().columns().every( function () {
                var column = this;
                var select = $('<select><option value=""></option></select>')
                    .appendTo( $(column.header()).empty() )
                    .on( 'change', function () {
                        var val = $.fn.dataTable.util.escapeRegex(
                            $(this).val()
                        );

                        column
                            .search( val ? '^'+val+'$' : '', true, false )
                            .draw();
                    } );

                column.data().unique().sort().each( function ( d, j ) {
                    select.append( '<option value="'+d+'">'+d+'</option>' )
                } );
            } );
        }
    } );
} );
</script>
