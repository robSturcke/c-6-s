<div class="container-body">
  <div class="row">
    <br>
    <div class="col-md-8">
      <h1>Your posting</h1>
      <table id="c6sTable" class='display responsive no-wrap' width="100%">
        <thead>
          <tr>
            <th>Console</th>
            <th>Gamertag</th>
            <th>Activity</th>
            <th>Class</th>
            <th>Light</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @post.console %></td>
            <td><%= @post.name %></td>
            <td><%= @post.activity %></td>
            <td><%= @post.destiny_class %></td>
            <td><%= @post.light_lvl %></td>
            <td><%= @post.notes %></td>
          </tr>
        </tbody>
      </table>

    <table class="col-md-4">
      <%= link_to 'Edit', @post, method: :edit, class: 'btn btn-success' %> |
      <%= link_to "Delete Post", @post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this application? This cannot be undone.' } %>
    </table>
    <br>
    </div>
  </div>
</div>
<script>
  $('#c6sTable').DataTable({
    responsive: true
  });
</script>
