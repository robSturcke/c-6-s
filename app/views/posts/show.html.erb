<div class="container-body">
    <br>
      <div class="posts-wrap">
      <h1>Review Your Post</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Console</th>
            <th>Gamertag</th>
            <th>Activity</th>
            <th>Class</th>
            <th>Light</th>
            <th>Notes</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @post.console %></td>
            <td><%= @post.name %></td>
            <td><%= @post.activity %></td>
            <td><%= @post.destiny_class %></td>
            <td><%= @post.light_lvl %></td>
            <td><%= @post.notes %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <br />
    <table class="table">
      <%= link_to "Return to All Posts", root_path, class: 'btn btn-lfg' %>
      <%= link_to 'Edit', posts_path(@post), class: 'btn btn-success' %>
      <%= link_to "Delete Post", @post, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this post?' } %>
    </table>
    <br>
</div>
